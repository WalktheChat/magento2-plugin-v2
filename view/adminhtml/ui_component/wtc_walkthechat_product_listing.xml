<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_grid_data_source</item>
            <item name="deps" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_grid_data_source</item>
        </item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="array">
                <item name="name" xsi:type="string">back</item>
                <item name="label" xsi:type="string" translate="true">Back To Dashboard</item>
                <item name="class" xsi:type="string">return back</item>
                <item name="url" xsi:type="string">*/dashboard/index</item>
                <item name="sort_order" xsi:type="string">100</item>
            </item>
            <item name="delete_all" xsi:type="string">Walkthechat\Walkthechat\Block\Adminhtml\Dashboard\DeleteAllButton</item>
            <item name="export_all" xsi:type="array">
                <item name="name" xsi:type="string">export_all</item>
                <item name="label" xsi:type="string" translate="true">Export All Products</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">*/product/exportAll</item>
                <item name="sort_order" xsi:type="string">200</item>
            </item>
            <item name="export_selected" xsi:type="array">
                <item name="name" xsi:type="string">export_selected</item>
                <item name="label" xsi:type="string" translate="true">Export Selected Products</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">*/*/export</item>
                <item name="sort_order" xsi:type="string">300</item>
            </item>
        </item>
        <item name="spinner" xsi:type="string">wtc_walkthechat_product_grid_columns</item>
    </argument>
    <dataSource name="wtc_walkthechat_product_grid_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">WalkthechatProductGridDataProvider</argument>
            <argument name="name" xsi:type="string">wtc_walkthechat_product_grid_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render" />
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">entity_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
    <container name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="template" xsi:type="string">ui/grid/toolbar</item>
                <item name="stickyTmpl" xsi:type="string">ui/grid/sticky/toolbar</item>
            </item>
        </argument>
        <bookmark name="bookmarks">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="storageConfig" xsi:type="array">
                        <item name="namespace" xsi:type="string">wtc_walkthechat_product_listing</item>
                    </item>
                </item>
            </argument>
        </bookmark>
        <container name="columns_controls">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsData" xsi:type="array">
                        <item name="provider" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_listing.wtc_walkthechat_product_grid_columns</item>
                    </item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/controls/columns</item>
                    <item name="displayArea" xsi:type="string">dataGridActions</item>
                </item>
            </argument>
        </container>
        <filterSearch name="fulltext">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="provider" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_grid_data_source</item>
                    <item name="chipsProvider" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_listing.listing_top.listing_filters_chips</item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_listing.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current.search</item>
                    </item>
                </item>
            </argument>
        </filterSearch>
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsProvider" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_listing.wtc_walkthechat_product_grid_columns</item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_listing.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current.filters</item>
                    </item>
                    <item name="childDefaults" xsi:type="array">
                        <item name="provider" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_listing.listing_top.listing_filters</item>
                        <item name="imports" xsi:type="array">
                            <item name="visible" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_listing.wtc_walkthechat_product_grid_columns.${ $.index }:visible</item>
                        </item>
                    </item>
                </item>
            </argument>
        </filters>
        <paging name="listing_paging">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_listing.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current.paging</item>
                    </item>
                    <item name="selectProvider" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_listing.contacts_grid_columns.ids</item>
                </item>
            </argument>
        </paging>
        <massaction name="listing_massaction"
                    component="Magento_Ui/js/grid/tree-massactions"
                    class="\Magento\Catalog\Ui\Component\Product\MassAction">
            <action name="delete">
                <settings>
                    <confirm>
                        <title>Delete items</title>
                        <message>Are you sure you want to delete selected products from WalkTheChat?</message>
                    </confirm>
                    <url path="*/*/deleteProducts"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
            <action name="resync">
                <settings>
                    <url path="*/*/resyncProducts"/>
                    <type>walkthechat_resync</type>
                    <label translate="true">Re-sync</label>
                </settings>
            </action>
        </massaction>
    </container>
    <columns name="wtc_walkthechat_product_grid_columns">
        <settings>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_listing.product_columns.actions</item>
                    <item name="target" xsi:type="string">applyAction</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">edit</item>
                        <item name="1" xsi:type="string">${ $.$data.rowIndex }</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids">
            <settings>
                <indexField>product_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="product_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Product ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
		<column name="product_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">true</item>
                    <item name="label" xsi:type="string" translate="true">Product Name</item>
                    <item name="sortable" xsi:type="boolean">true</item>
                </item>
            </argument>
        </column>
		<column name="sku">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">true</item>
                    <item name="label" xsi:type="string" translate="true">Product SKU</item>
                    <item name="sortable" xsi:type="boolean">true</item>
                </item>
            </argument>
        </column>
		<column name="updated_at" class="Magento\Ui\Component\Listing\Columns\Date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">dateRange</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/date</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="sorting" xsi:type="string">desc</item>
                    <item name="label" xsi:type="string" translate="true">Updated At</item>
                </item>
            </argument>
        </column>
        <column name="status">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Walkthechat\Walkthechat\Model\Config\Source\ProductStatus</item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="editor" xsi:type="array">
                        <item name="editorType" xsi:type="string">select</item>
                    </item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                </item>
            </argument>
        </column>
        <column name="message">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">false</item>
                    <item name="label" xsi:type="string" translate="true">Details</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                </item>
            </argument>
        </column>
    </columns>
    <container name="sticky">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/grid/sticky/sticky</item>
                <item name="toolbarProvider" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_listing.listing_top</item>
                <item name="listingProvider" xsi:type="string">wtc_walkthechat_product_listing.wtc_walkthechat_product_listing.wtc_walkthechat_product_grid_columns</item>
            </item>
        </argument>
    </container>
</listing>
